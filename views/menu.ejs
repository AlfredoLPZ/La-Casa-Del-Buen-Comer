<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="resources/css/web.css">
    <title>MENU</title>
  </head>
  <body>
    <!-- BARRA DE NAVEGACION -->
    <nav class="navegacion">
      <a href="#menu" class="menu-img">
        <img src="/resources/css/imgs/menu.png" alt="menu">
      </a>
      <div class="nav-links" id="menu">
        <a href="inicio">INICIO</a>
        <a href="menu" class="actual">MENÚ</a>
        <a href="comentarios">COMENTARIOS</a>
      </div>
    </nav>
    <!-- CONTENIDO DE LA PAGINA -->
    <section class="contenido">
      <div class="menu">
        <!-- DIV PARA DESAYUNOS -->
        <div class="container">
          <div class="row">
            <h1>DESAYUNOS</h1>
            <h2>DISPONIBLE DE 09:00 A 12:00</h2>
            <% desayunos.forEach((desayuno, index) => { %>
              <div class="col card-container">
                <div class="card" id="desayuno-card<%= index %>">
                  <div class="card-front">
                    <img src="<%= desayuno.imagen %>" alt="Imagen del platillo" class="img-menu">
                    <h5 class="card-title"><%= desayuno.nombre %></h5>
                    <p class="card-text">PRECIO: $<%= desayuno.precio %> PESOS</p>
                    <button class="btn btn-info" onclick="showDescription('desayuno', <%= index %>)">Ver más</button>
                  </div>
                  <div class="card-back" id="desayuno-back<%= index %>" style="display: none;">
                    <h5 class="card-title"><%= desayuno.nombre %></h5>
                    <p class="card-description"><%= desayuno.descrip %></p>
                    <button class="btn btn-close" onclick="hideDescription('desayuno', <%= index %>)"></button>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>        
        <!-- DIV PARA COMIDAS -->
        <div class="container">
          <div class="row">
            <h1>COMIDAS</h1>
            <h2>DISPONIBLE DE 12:00 A 18:30</h2>
            <% comidas.forEach((comida, index) => { %>
              <div class="col card-container">
                <div class="card" id="comida-card<%= index %>">
                  <div class="card-front">
                    <img src="<%= comida.imagen %>" alt="Imagen del platillo" class="img-menu">
                    <h5 class="card-title"><%= comida.nombre %></h5>
                    <p class="card-text">PRECIO: $<%= comida.precio %> PESOS</p>
                    <button class="btn btn-info" onclick="showDescription('comida', <%= index %>)">Ver más</button>
                  </div>
                  <div class="card-back" id="comida-back<%= index %>" style="display: none;">
                    <h5 class="card-title"><%= comida.nombre %></h5>
                    <p class="card-description"><%= comida.descrip %></p>
                    <button class="btn btn-close" onclick="hideDescription('comida', <%= index %>)"></button>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
        <!-- DIV PARA BEBIDAS -->
        <div class="container">
          <div class="row">
            <h1>BEBIDAS</h1>
            <h2>DISPONIBLE DE 09:00 A 18:30</h2>
            <% bebidas.forEach((bebida, index) => { %>
              <div class="col card-container">
                <div class="card" id="bebida-card<%= index %>">
                  <div class="card-front">
                    <img src="<%= bebida.imagen %>" alt="Imagen del platillo" class="img-menu">
                    <h5 class="card-title"><%= bebida.nombre %></h5>
                    <p class="card-text">PRECIO: $<%= bebida.precio %> PESOS</p>
                    <button class="btn btn-info" onclick="showDescription('bebida', <%= index %>)">Ver más</button>
                  </div>
                  <div class="card-back" id="bebida-back<%= index %>" style="display: none;">
                    <h5 class="card-title"><%= bebida.nombre %></h5>
                    <p class="card-description"><%= bebida.descrip %></p>
                    <button class="btn btn-close" onclick="hideDescription('bebida', <%= index %>)"></button>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
      <!-- DIV DEL CHATBOT -->
      <div class="chatbot" id="iframeContainer">
        <iframe id="dialogflowFrame" width="350" height="430" allow="microphone;" src="https://console.dialogflow.com/api-client/demo/embedded/46334376-f50c-482f-b90c-140b4022d5bf"></iframe>
      </div>
      <button class="chatbot-bt" onclick="toggleDialogflow()">Chatbot</button>        
    </section>
    <!-- SECCION INFERIOR DE LA PAGINA -->    
    <footer>
      <h2>AQUI ESTAMOS</h2>
      <div class="mapa" id="map">
        <p>AGREGAR EL MAPA</p>
      </div>
      <div class="dir-con">
        <div class="container">
          <div class="row align-items-start">
            <div class="col direccion">
              <h3>DIRECCION</h3>
              <p>- Mocorito 53, Alvaro Obregon</p>
              <h3>HORARIO</h3>
              <p>- Lunes a Domingo de 09:00 a 18:30</p>
            </div>
            <div class="col contacto">
              <h3>CONTACTO</h3>
              <a href="https://www.facebook.com/" target="_blank"><img src="/resources/css/imgs/redes/facebook-96.png" alt=""></a>
              <a href="https://www.instagram.com/" target="_blank"><img src="/resources/css/imgs/redes/instagram-96.png" alt=""></a>
              <a href="https://mx.pinterest.com/" target="_blank"><img src="/resources/css/imgs/redes/pinterest-96.png" alt=""></a>
              <a href="https://www.tiktok.com/" target="_blank"><img src="/resources/css/imgs/redes/tiktok-96.png" alt=""></a>
              <a href="https://twitter.com/home" target="_blank"><img src="/resources/css/imgs/redes/twitterx-96.png" alt=""></a>
              <a href="https://wa.me/525587683642" target="_blank"><img src="/resources/css/imgs/redes/whatsapp-96.png" alt=""></a>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <!-- SCRIPT PARA MOSTRAR U OCULTAR LA INFORMACION DE LOS PLATILLOS -->
    <script>
      function showDescription(category, index) {
        document.getElementById(`${category}-card${index}`).querySelector('.card-front').style.display = 'none';
        document.getElementById(`${category}-back${index}`).style.display = 'block';
      }
      function hideDescription(category, index) {
        document.getElementById(`${category}-card${index}`).querySelector('.card-front').style.display = 'block';
        document.getElementById(`${category}-back${index}`).style.display = 'none';
      }
    </script>
    <!-- SCRIPT PARA PODER MOSTRAR LA UBICACION DEL RESTAURANTE EN EL MAPA -->
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
      var map = L.map('map').setView([19.412728109303536, -99.11861673473321], 16);
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map); //uso de OpenStreetMap como proveedor de mapas
      var marker = L.marker([19.412728109303536, -99.11861673473321]).addTo(map);
      marker.bindPopup("<b>¡Aquí estamos!</b>").openPopup();
    </script>
    <!-- SCRIPT PARA MOSTRAR Y OCULTAR EL IFRAME -->
    <script>
      function toggleDialogflow() {
        var iframeContainer = document.getElementById('iframeContainer');
        //VERIFICA EL ESTADO DEL CONTENEDOR DEL IFRAME
        if(iframeContainer.style.display === 'none'){
          //SI ESTA OCULTO, LO MUESTRA
          iframeContainer.style.display = 'block';
        } else {
          //SI ESTA VISIBLE, LO OCULTA
          iframeContainer.style.display = 'none';
        }
      }
    </script>
  </body>
</html>