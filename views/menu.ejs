<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="resources/css/web.css">
    <title>MENU</title>
  </head>
  <body>
    <!-- BARRA DE NAVEGACION -->
    <nav class="navegacion">
      <a href="inicio">INICIO</a>
      <a href="menu" class="actual">MENÃš</a>
      <a href="comentarios">COMENTARIOS</a>
    </nav>
    <!-- CONTENIDO DE LA PAGINA -->
    <section class="contenido">
      <!-- DIV PARA DESAYUNOS -->
      <div id="desayunos" style="display: none;">
        <h1>DESAYUNOS</h1>
        <h4>DISPONIBLE DE 09:00 A 12:00</h4>
        <% desayunos.forEach((desayuno)=>{ %>
          <div class="row" style="margin: 10px 0px;">
            <div class="col-1">
              <img src="<%= desayuno.imagen %>" alt="Imagen del platillo" class="img-menu">
            </div>
            <div class="col-11 info">
              <h2 class="nombre"><%= desayuno.nombre %></h2>
              <p class="descripcion"><%= desayuno.descrip %></p>
              <h5 class="precio">PRECIO: $<%= desayuno.precio %></h5>
            </div>
          </div>
        <% }) %>
      </div>
      <!-- DIV PARA COMIDAS -->
      <div id="comidas" style="display: none;">
        <h1>COMIDAS</h1>
        <h4>DISPONIBLE DE 12:00 A 18:30</h4>
        <% comidas.forEach((comida)=>{ %>
          <div class="row" style="margin: 10px 0px;">
            <div class="col-1">
              <img src="<%= comida.imagen %>" alt="Imagen del platillo" class="img-menu">
            </div>
            <div class="col-11 info">
              <h2 class="nombre"><%= comida.nombre %></h2>
              <p class="descripcion"><%= comida.descrip %></p>
              <h5 class="precio">PRECIO: $<%= comida.precio %></h5>
            </div>
          </div>
        <% }) %>
      </div>
    </section>      
    <!-- SECCION INFERIOR DE LA PAGINA -->    
    <footer>
      <h1>AQUI ESTAMOS</h1>
      <div class="mapa" id="mapa">
        <p>AGREGAR EL MAPA</p>
      </div>
      <div class="dir-con">
        <div class="container">
          <div class="row align-items-start">
            <div class="col direccion">
              <h3>DIRECCION</h3>
              <p>- Mocorito 53, Alvaro Obregon</p>
              <h3>HORARIO</h3>
              <p>- Lunes a Domingo de 09:00 a 18:30</p>
            </div>
            <div class="col contacto">
              <h3>CONTACTO</h3>
              <a href="https://www.facebook.com/" target="_blank"><img src="/resources/css/imgs/redes/facebook-96.png" alt=""></a>
              <a href="https://www.instagram.com/" target="_blank"><img src="/resources/css/imgs/redes/instagram-96.png" alt=""></a>
              <a href="https://mx.pinterest.com/" target="_blank"><img src="/resources/css/imgs/redes/pinterest-96.png" alt=""></a>
              <a href="https://www.tiktok.com/" target="_blank"><img src="/resources/css/imgs/redes/tiktok-96.png" alt=""></a>
              <a href="https://twitter.com/home" target="_blank"><img src="/resources/css/imgs/redes/twitterx-96.png" alt=""></a>
              <a href="https://wa.me/525587683642" target="_blank"><img src="/resources/css/imgs/redes/whatsapp-96.png" alt=""></a>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <!-- SCRIPT PARA SOLO MOSTRAR UN MENU DEPENDIENDO DE LA HORA -->
    <script>
      //FUNCION PARA OBTENER LA HORA LOCAL
      function obtenerHoraActual(){
        const ahora = new Date();
        return ahora.getHours();
      }
      //FUNCION PARA MOSTRAR EL MENU CORRESPONDIENTE A LA HORA
      function mostrarMenuSegunHora() {
        const hora = obtenerHoraActual(); 
        if (hora >= 9 && hora < 12){
          //MOSTRAR EL MENU DESAYUNOS
          document.getElementById('desayunos').style.display = 'block';
        } else if (hora >= 12 && hora < 23){
          //MOSTRAR EL MENU COMIDAS
          document.getElementById('comidas').style.display = 'block';
        }
      }
      //LLAMA LA FUNCION AL CARGAR LA PAGINA
      mostrarMenuSegunHora();
    </script>
  </body>
</html>