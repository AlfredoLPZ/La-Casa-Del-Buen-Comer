<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="resources/css/web.css">
    <title>COMENTARIOS</title>
  </head>
  <body>
    <!-- BARRA DE NAVEGACION -->
    <nav class="navegacion">
      <a href="inicio">INICIO</a>
      <a href="menu">MENÚ</a>
      <a href="comentarios" class="actual">COMENTARIOS</a>
    </nav>
    <!-- CONTENIDO DE LA PAGINA -->
    <section class="contenido">
      <div class="container text-center">
        <div class="row align-items-center">
          <!-- FORMULARIO PARA AGREGAR UN NUEVO COMENTARIO -->
          <div class="col-4 form-comentario">
            <h1>¿QUERES COMPARTIR TU EXPERIENCIA COMIENDO CON NOSOTROS?</h1>
            <form action="/ncomen" method="POST">
              <label for="comentario">DEJANOS UN COMENTARIO</label>
              <input type="text" name="comentario" required>
              <div style="display: inline;">
                <input type="submit" class="bt-guardar" value="GUARDAR COMENTARIO">        
              </div>
            </form>
          </div>
          <!-- MOSTRAR LOS COMENTARIOS DE LOS CLIENTES -->
          <div class="col-8">
            <h4>COMENTARIOS DE NUESTROS CLIENTES</h4>
            <div class="ver-comen">
              <% results.forEach((comentario)=>{ %>
                <div class="comentario">
                  <p><%= comentario.comentario %></p>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </section>      
    <!-- SECCION INFERIOR DE LA PAGINA -->    
    <footer>
      <h1>AQUI ESTAMOS</h1>
      <div class="mapa" id="mapa">
        <p>AGREGAR EL MAPA</p>
      </div>
      <div class="dir-con">
        <div class="container">
          <div class="row align-items-start">
            <div class="col direccion">
              <h3>DIRECCION</h3>
              <p>- Mocorito 53, Alvaro Obregon</p>
              <h3>HORARIO</h3>
              <p>- Lunes a Domingo de 09:00 a 18:30</p>
            </div>
            <div class="col contacto">
              <h3>CONTACTO</h3>
              <a href="https://www.facebook.com/" target="_blank"><img src="/resources/css/imgs/redes/facebook-96.png" alt=""></a>
              <a href="https://www.instagram.com/" target="_blank"><img src="/resources/css/imgs/redes/instagram-96.png" alt=""></a>
              <a href="https://mx.pinterest.com/" target="_blank"><img src="/resources/css/imgs/redes/pinterest-96.png" alt=""></a>
              <a href="https://www.tiktok.com/" target="_blank"><img src="/resources/css/imgs/redes/tiktok-96.png" alt=""></a>
              <a href="https://twitter.com/home" target="_blank"><img src="/resources/css/imgs/redes/twitterx-96.png" alt=""></a>
              <a href="https://wa.me/5255587683642" target="_blank"><img src="/resources/css/imgs/redes/whatsapp-96.png" alt=""></a>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>