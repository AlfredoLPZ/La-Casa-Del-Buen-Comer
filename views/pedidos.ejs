              });
  
              doc.moveDown();
              doc.fontSize(12);
              data.detalles.forEach(detalle => {
                doc.text(`Platillo ID: ${detalle.platillo_id}`);
                doc.text(`Nombre: ${detalle.nombre}`);
                doc.text(`Cantidad: ${detalle.cantidad}`);
                doc.moveDown();
              });
  
              // Agregar la nota al PDF
              doc.text(`NOTA: ${data.nota}`);
  
              doc.end();
