<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="resources/css/sistema.css">
  <title>PLATILLOS</title>
</head>
<body>         
  <div class="index">
    <a href="index"><img src="data:image/png;base64,"/></a>
    <h1>TODOS LOS PLATILLOS</h1>
    <a href="procreate" class="azul">NUEVO</a>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">IMAGEN</th>
          <th scope="col">NOMBRE</th>
          <th scope="col">PRECIO</th>
          <th scope="col">CATEGORIA</th>
          <td scope="col">VISIBLE</td>
          <th scope="col">OPCIONES</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach((platillo)=>{ %>
        <tr>
          <td><%= platillo.id %></td>
          <td>
            <img src="<%= platillo.imagen %>" alt="Imagen del platillo" style="max-width: 100px; max-height: 50px;">
          </td>
          <td><%= platillo.nombre %></td>
          <td>$<%= platillo.precio %></td>
          <td><%= platillo.categoria %></td>
          <td><%= platillo.visible %></td>
          <td>
            <a href="proedit/<%= platillo.id %>" class="verde">EDITAR</a>
            <a href="borrar/<%= platillo.id %>" class="rojo">BORRAR</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <img src="public/uploads/1704389737473-Bento.jpg" alt="">
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>